        <activity android:name=".NoteSQLiteActivity" android:exported="false"/>

        <service android:name="com.yang.service.MusicService"/>
        <service
            android:name="com.yang.service.MyForegroundService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />

        <service
            android:name="com.yang.androiddemolog.service2.ForegroundService2"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />

        <!-- 静态注册开机广播接收器 -->
        <receiver
            android:name="com.yang.broadcast.BootCompletedReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <!-- 监听开机完成广播 -->
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <!-- 注册ContentProvider -->
        <provider
            android:name=".contentProvider.FansContentProvider"
            android:authorities="com.yang.androiddemolog.fansprovider"
            android:exported="false" />

    </application>

</manifest>