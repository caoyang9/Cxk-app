<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/cardsMMIContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 第一行卡片 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMMI1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 标题行 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/cardMMI1"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/arrowMMI1"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_arrow_down"
                            android:clickable="true"
                            android:focusable="true"
                            android:onClick="onArrowClick"
                            tools:ignore="ContentDescription" />
                    </LinearLayout>

                    <!-- 功能按钮区域 -->
                    <LinearLayout
                        android:id="@+id/contentMMI1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:visibility="gone"
                        android:background="#F8F9FA">

                        <Button
                            android:id="@+id/btn_brightness"
                            android:layout_width="0dp"
                            android:layout_height="49dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="#4CAF50"
                            android:elevation="2dp"
                            android:text="@string/cardMMI1Btn1"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/btn_image"
                            android:layout_width="0dp"
                            android:layout_height="49dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="#FF00FF"
                            android:elevation="2dp"
                            android:text="@string/cardMMI1Btn2"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/btn_touchToArea"
                            android:layout_width="0dp"
                            android:layout_height="49dp"
                            android:layout_weight="1"
                            android:backgroundTint="#FF8000"
                            android:elevation="2dp"
                            android:text="@string/cardMMI1Btn3"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 第二行卡片 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMMI2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/cardMMI2"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/arrowMMI2"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_arrow_down"
                            android:clickable="true"
                            android:focusable="true"
                            android:onClick="onArrowClick"
                            tools:ignore="ContentDescription" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/contentMMI2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:visibility="gone"
                        android:background="#F8F9FA">

                        <Button
                            android:id="@+id/btn_key"
                            android:layout_width="0dp"
                            android:layout_height="49dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="#00BCD4"
                            android:elevation="2dp"
                            android:text="@string/cardMMI2Btn1"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/btn_flash"
                            android:layout_width="0dp"
                            android:layout_height="49dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="#8BC34A"
                            android:elevation="2dp"
                            android:text="@string/cardMMI2Btn2"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/btn_vibrator"
                            android:layout_width="0dp"
                            android:layout_height="49dp"
                            android:layout_weight="1"
                            android:backgroundTint="#FF5722"
                            android:elevation="2dp"
                            android:text="@string/cardMMI2Btn3"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 第三行卡片 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMMI3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/cardMMI3"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/arrowMMI3"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_arrow_down"
                            android:clickable="true"
                            android:focusable="true"
                            android:onClick="onArrowClick"
                            tools:ignore="ContentDescription" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/contentMMI3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:visibility="gone"
                        android:background="#F8F9FA">

                        <Button
                            android:id="@+id/btn_take_photo"
                            android:layout_width="0dp"
                            android:layout_height="49dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="#009688"
                            android:elevation="2dp"
                            android:text="@string/cardMMI3Btn1"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/btn2_3_2"
                            android:layout_width="0dp"
                            android:layout_height="49dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="#FF9800"
                            android:elevation="2dp"
                            android:text="@string/cardMMI3Btn2"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/btn2_3_3"
                            android:layout_width="0dp"
                            android:layout_height="49dp"
                            android:layout_weight="1"
                            android:backgroundTint="#795548"
                            android:elevation="2dp"
                            android:text="@string/cardMMI3Btn3"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 第四行卡片 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMMI4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/cardMMI4"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/arrowMMI4"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_arrow_down"
                            android:clickable="true"
                            android:focusable="true"
                            android:onClick="onArrowClick"
                            tools:ignore="ContentDescription" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/contentMMI4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:visibility="gone"
                        android:background="#F8F9FA">

                        <Button
                            android:id="@+id/btn_audio_music"
                            android:layout_width="0dp"
                            android:layout_height="49dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="#009688"
                            android:elevation="2dp"
                            android:text="@string/cardMMI4Btn1"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/btn2_audio2"
                            android:layout_width="0dp"
                            android:layout_height="49dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="#FF9800"
                            android:elevation="2dp"
                            android:text="@string/cardMMI4Btn2"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/btn2_audio3"
                            android:layout_width="0dp"
                            android:layout_height="49dp"
                            android:layout_weight="1"
                            android:backgroundTint="#795548"
                            android:elevation="2dp"
                            android:text="@string/cardMMI4Btn3"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- 底部按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/btnPrePage"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#9E9E9E"
            android:elevation="4dp"
            android:text="@string/prePage"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnNextTo2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:backgroundTint="#4CAF50"
            android:elevation="4dp"
            android:text="@string/nextPage"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>