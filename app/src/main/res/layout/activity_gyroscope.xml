<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#F5F5F5"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="陀螺仪传感器测试"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"/>

    <!-- 实时旋转指示器 -->
    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/bg_compass"
        android:layout_marginBottom="30dp">

        <ImageView
            android:id="@+id/iv_rotation_indicator"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_gyro_arrow_simple"
            android:contentDescription="旋转指示器"/>

    </FrameLayout>

    <!-- 角速度实时显示 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_sensor_data"
        android:padding="16dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实时角速度"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tv_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X轴(横滚): -- °/s"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y轴(俯仰): -- °/s"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_z"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Z轴(偏航): -- °/s"
            android:textSize="16sp"/>

    </LinearLayout>

    <!-- 积分角度显示 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_angle_data"
        android:padding="16dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分角度（通过角速度计算）"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FF5722"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tv_angle_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="横滚角: --°"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_angle_y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="俯仰角: --°"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_angle_z"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="偏航角: --°"
            android:textSize="16sp"/>

    </LinearLayout>

    <!-- 状态和动作检测 -->
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="旋转设备以测试陀螺仪传感器"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:layout_marginBottom="15dp"/>

</LinearLayout>